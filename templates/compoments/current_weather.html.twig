            <h5 class="card-title">Current Time</h5>
            <h1 class="card-text">{{ time }}</h1>
            <h5 class="card-title">Current Temperature</h5>
            {% if weather %}
                <div class="d-flex justify-content-center align-items-center">
                    <h3 class="card-text mb-0">{{ weather.current_weather.temperature }}Â°C</h3>
                    <i class="wi weather-icon {{ weather.current_weather.icon}} ms-2"></i>
